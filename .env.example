# ── ARGUS — Environment Variables ─────────────────────────
# Copy to .env and fill in real values

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_PREFIX=argus

# External APIs (leave blank for demo mode mock data)
CWC_API_KEY=your_key_here
IMD_API_KEY=your_key_here

# File paths
CCTV_REGISTRY_PATH=./data/cctv_registry.json
YOLO_MODEL_PATH=./models/yolo11n.pt
SAM_MODEL_PATH=./models/sam2_tiny.pt
DEMO_VIDEO_PATH=./data/himachal_flood_demo.mp4

# CV Gauging
CV_CONFIDENCE_THRESHOLD=0.4
PIXEL_TO_METER_DEFAULT=0.05

# Prediction
XGBOOST_MODEL_PATH=./models/xgb_flood_v1.json
PINN_MODEL_PATH=./models/pinn_mesh_v1.pt
PREDICTION_INTERVAL_S=300
SHAP_TOP_K=5

# Feature Engine
FEATURE_WINDOW_1H=12
FEATURE_WINDOW_3H=36
FEATURE_WINDOW_6H=72
FEATURE_WINDOW_24H=288

# Alert Dispatcher
ALERT_KAFKA_TOPIC=alerts.dispatch
ALERT_COOLDOWN_S=900

# General
SERVICE_HOST=0.0.0.0
LOG_LEVEL=INFO
DEMO_MODE=true

# ── Phase 2 ──────────────────────────────────────────────
# Causal Engine
CAUSAL_ENGINE_PORT=8007
CAUSAL_DAG_PATH=./shared/causal_dag/dag.json
CAUSAL_GNN_HIDDEN=64
CAUSAL_GNN_LAYERS=3

# FloodLedger
LEDGER_PORT=8008
LEDGER_DB_PATH=./data/ledger.db
LEDGER_DIFFICULTY=2

# CHORUS
CHORUS_PORT=8009
CHORUS_WINDOW_MIN=60
CHORUS_CREDIBILITY_THRESHOLD=0.3
WHATSAPP_WEBHOOK_SECRET=

# Federated Learning
FL_SERVER_PORT=8010
FL_ROUNDS=10
FL_MIN_CLIENTS=2
FL_DP_EPSILON=1.0
FL_DP_DELTA=0.00001

# Evacuation RL
EVAC_RL_PORT=8011
EVAC_GRAPH_PATH=./data/evac_graph.json
EVAC_MODEL_PATH=./models/evac_ppo.zip

# MIRROR
MIRROR_PORT=8012
MIRROR_MAX_STEPS=48

# ── Phase 3 ──────────────────────────────────────────────
# ScarNet — Satellite Terrain Monitor
SCARNET_PORT=8013
COPERNICUS_CLIENT_ID=your_id
COPERNICUS_CLIENT_SECRET=your_secret
SENTINEL2_BEFORE_TILE=./data/sentinel2/beas_valley_2022_08_before.tif
SENTINEL2_AFTER_TILE=./data/sentinel2/beas_valley_2023_09_after.tif
SCARNET_DEMO_MODE=true
UNET_CHECKPOINT=./models/unet_change_detect.pt

# API Gateway
GATEWAY_PORT=8000
GATEWAY_CACHE_TTL=30
