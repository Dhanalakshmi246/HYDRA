# ── ARGUS — Environment Variables ─────────────────────────
# Copy to .env and fill in real values

# ── Infrastructure ──────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_PREFIX=argus
TIMESCALE_URL=postgresql://argus:argus@localhost:5432/argus_db
REDIS_URL=redis://localhost:6379
HARDHAT_RPC_URL=http://localhost:8545

# ── API Keys (get these before hackathon) ───────────────
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
# ── Map (Leaflet + OpenStreetMap — no key needed) ──
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_MAP_TILE_URL_DARK=https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png

# ── Satellite / ScarNet (no Copernicus needed) ──────
SCARNET_DEMO_MODE=true
SENTINEL_AWS_BUCKET=sentinel-s2-l2a
SENTINEL_AWS_REGION=eu-central-1
# Optional NASA Earthdata (free — register at urs.earthdata.nasa.gov):
# NASA_EARTHDATA_TOKEN=your_token_here

IMD_API_KEY=your_key
CWC_API_KEY=your_key

# ── Model Paths ─────────────────────────────────────────
YOLO_MODEL_PATH=./models/yolo11n.pt
SAM_MODEL_PATH=./models/sam2_tiny.pt
PINN_MODEL_PATH=./models/pinn_beas_river.pt
XGBOOST_MODEL_PATH=./models/xgboost_flood.joblib
CAUSAL_GNN_MODEL_PATH=./models/causal_gnn_brahmaputra.pt
TFT_CHECKPOINT_PATH=./models/tft_brahmaputra.ckpt
INDIC_BERT_CHECKPOINT=./models/indic_bert_flood_classifier/

# ── File Paths ──────────────────────────────────────────
CCTV_REGISTRY_PATH=./data/cctv_registry.json
DEMO_VIDEO_PATH=./data/himachal_flood_demo.mp4
CAUSAL_DAG_CONFIG_PATH=./data/dags/brahmaputra_dag.json
ASSET_REGISTRY_PATH=./data/insured_assets.csv
SENTINEL2_BEFORE_TILE=./data/sentinel2/beas_valley_2022_08_before.tif
SENTINEL2_AFTER_TILE=./data/sentinel2/beas_valley_2023_09_after.tif

# ── CV Gauging ──────────────────────────────────────────
CV_CONFIDENCE_THRESHOLD=0.4
PIXEL_TO_METER_DEFAULT=0.05

# ── Prediction ──────────────────────────────────────────
PREDICTION_INTERVAL_S=300
SHAP_TOP_K=5
TRAIN_ON_STARTUP=true
FEATURE_POLL_INTERVAL_SEC=60
TFT_ENABLED=true

# ── Feature Engine ──────────────────────────────────────
FEATURE_WINDOW_1H=12
FEATURE_WINDOW_3H=36
FEATURE_WINDOW_6H=72
FEATURE_WINDOW_24H=288

# ── Alert Dispatcher ────────────────────────────────────
ALERT_KAFKA_TOPIC=alerts.dispatch
ALERT_COOLDOWN_S=900

# ── Demo Config ─────────────────────────────────────────
DEMO_MODE=true
SCARNET_DEMO_MODE=true
WHISPER_MODEL_SIZE=base
GEOHASH_PRECISION=5
CHORUS_CONSENSUS_THRESHOLD=3

# ── Service Ports ────────────────────────────────────────
GATEWAY_PORT=8000
CAUSAL_ENGINE_PORT=8006
FLOOD_LEDGER_PORT=8007
CHORUS_PORT=8008
FL_SERVER_PORT=8009
EVAC_RL_PORT=8010
