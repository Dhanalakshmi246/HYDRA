{
    "node_id": "majuli",
    "node_name": "Majuli Island ACN",
    "region": "Majuli, Assam",
    "description": "River island station â€” flat terrain, high flood exposure from Brahmaputra",

    "oracle_model": "oracle_majuli.tflite",
    "oracle_fallback": "xgboost_majuli.joblib",

    "warning_threshold": 0.55,
    "emergency_threshold": 0.80,
    "advisory_threshold": 0.35,

    "poll_interval_sec": 30,
    "max_cache_readings": 500,

    "sensor": {
        "type": "ultrasonic_level",
        "unit": "meters",
        "normal_range": [2.0, 5.0],
        "danger_level_m": 6.5,
        "highest_flood_level_m": 8.2
    },

    "escalation": {
        "lora_siren_enabled": true,
        "twilio_enabled": false,
        "cell_broadcast_sim": true,
        "siren_duration_sec": 10,
        "cooldown_sec": 300,
        "alert_phones": ["+919876543210", "+919876543211"]
    },

    "cloud_sync": {
        "enabled": true,
        "endpoint": "http://prediction:8004/api/v1/prediction/VIL-AS-MAJULI",
        "sync_interval_sec": 60,
        "retry_max": 3
    },

    "demo": {
        "duration_sec": 300,
        "trigger_at_sec": 180,
        "start_level_m": 3.5,
        "peak_level_m": 7.8,
        "rainfall_start_mm": 5.0,
        "rainfall_peak_mm": 85.0,
        "soil_moisture_start": 0.45,
        "soil_moisture_peak": 0.92
    }
}
